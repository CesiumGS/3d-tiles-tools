{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2021",
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noImplicitOverride": true,
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "lib": ["es2021"],
    "paths": {
      "*": ["./src/*.d.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "./packages/structure/tsconfig.json"
    },
    {
      "path": "./packages/gltf-extensions/tsconfig.json"
    },
    {
      "path": "./packages/ktx/tsconfig.json"
    },
    {
      "path": "./packages/base/tsconfig.json"
    },
    {
      "path": "./packages/metadata/tsconfig.json"
    },
    {
      "path": "./packages/tilesets/tsconfig.json"
    },
    {
      "path": "./packages/tools/tsconfig.json"
    },
    {
      "path": "./packages/cli/tsconfig.json"
    }
  ]
}
