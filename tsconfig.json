{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2021",
    "baseUrl": "./",
    "strict": true,
    "lib": ["es2021"],

    "outDir": "./build",

    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noImplicitOverride": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "sourceMap": true,
  },
  "include": ["src/**/*", "specs/**/*"],
  "exclude": ["node_modules", "specs/data"]
}
